<%- include("../includes/boiler.ejs") %>
<%- include("../includes/nav.ejs") %>

<style>
  :root{
    --bg:#050505;
    --card-bg:rgba(255,255,255,0.03);
    --border:rgba(255,255,255,0.08);
    --muted:#9ea8b3;
    --text:#ffffff;
    --accent:#EDFF00;
  }

  body{
    margin:0;
    background:var(--bg);
    font-family:Inter,system-ui,sans-serif;
    color:var(--text);
  }

  .auth-wrap{
    max-width:420px;
    margin:70px auto;
    padding:30px 26px;
    background:linear-gradient(145deg,rgba(255,255,255,0.04),rgba(0,0,0,0.6));
    border-radius:18px;
    border:1px solid var(--border);
    box-shadow:0 20px 45px rgba(0,0,0,0.7);
  }

  .auth-head{
    text-align:center;
    margin-bottom:22px;
  }

  .auth-title{
    font-size:24px;
    font-weight:900;
    margin:0;
  }

  .auth-sub{
    font-size:14px;
    color:var(--muted);
    margin-top:6px;
  }

  .field{
    margin-bottom:16px;
  }

  label{
    display:block;
    margin-bottom:6px;
    font-size:13px;
    font-weight:700;
  }

  input,select{
    width:100%;
    padding:12px 14px;
    border-radius:10px;
    background:rgba(255,255,255,0.03);
    border:1px solid rgba(255,255,255,0.08);
    color:#fff;
    font-size:14px;
  }

  select option{
    background:#050505;
    color:#fff;
  }

  .btn-submit{
    width:100%;
    padding:13px;
    border-radius:999px;
    background:var(--accent);
    border:none;
    font-weight:900;
    color:#000;
    font-size:16px;
    cursor:pointer;
    margin-top:10px;
  }

  .btn-submit:hover{
    background:#d4ff37;
  }

  .hint{
    text-align:center;
    margin-top:14px;
    font-size:13px;
    color:var(--muted);
  }

  .link-highlight{
    color:var(--accent);
    font-weight:800;
    text-decoration:none;
  }

  .error-box{
    background:rgba(255,60,60,0.1);
    border:1px solid rgba(255,60,60,0.3);
    padding:10px;
    border-radius:8px;
    font-size:13px;
    margin-bottom:14px;
    color:#ffb3b3;
  }
</style>

<main class="auth-wrap">

  <div class="auth-head">
    <h1 class="auth-title">Create Account</h1>
    <p class="auth-sub">Student Registration</p>
  </div>

  <% if (typeof error !== "undefined") { %>
    <div class="error-box"><%= error %></div>
  <% } %>

  <form action="/signup" method="POST">

    <!-- Username -->
    <div class="field">
      <label>Username</label>
      <input type="text" name="username" required>
    </div>

    <!-- Email -->
    <div class="field">
      <label>Email</label>
      <input type="email" name="email" required>
    </div>

    <!-- Password -->
    <div class="field">
      <label>Password</label>
      <input type="password" name="password" required>
    </div>

    <!-- Department -->
    <div class="field">
      <label>Department</label>
      <select name="department" required>
        <option value="">Select Department</option>
        <option value="Computer">Computer</option>
        <option value="Mechanical">Mechanical</option>
        <option value="Electrical">Electrical</option>
        <option value="Civil">Civil</option>
      </select>
    </div>

    <!-- âœ… Year (IMPORTANT) -->
    <div class="field">
      <label>Year</label>
      <select name="year" required>
        <option value="">Select Year</option>
        <option value="1">First Year</option>
        <option value="2">Second Year</option>
        <option value="3">Third Year</option>
      </select>
    </div>

    <!-- Division -->
    <div class="field">
      <label>Division</label>
      <select name="division" required>
        <option value="">Select Division</option>
        <option value="A">Division A</option>
        <option value="B">Division B</option>
        <option value="C">Division C</option>
      </select>
    </div>

    <button type="submit" class="btn-submit">Signup</button>

    <p class="hint">
      Already have an account?
      <a href="/login" class="link-highlight">Login</a>
    </p>

  </form>
</main>
