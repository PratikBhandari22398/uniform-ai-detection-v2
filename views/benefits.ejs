        position: relative;
        overflow: hidden;
    }

    .benefit-card::before {
        content: "";
        position: absolute;
        inset: -40%;
        background: radial-gradient(circle at top, rgba(198,255,62,0.16), transparent 60%);
        opacity: 0;
        transition: opacity .35s ease;
        pointer-events: none;
    }

    .benefit-card:hover::before {
        opacity: 1;
    }

    .benefit-card:hover {
        border-color: var(--accent-2);
        transform: translateY(-8px);
        box-shadow:
          0 26px 60px rgba(15, 23, 42, 0.95),
          0 0 40px rgba(75, 201, 255, 0.45);
    }

    .benefit-icon {
        width: 64px;
        height: 64px;
        border-radius: 18px;
        background: radial-gradient(circle at top, rgba(75,201,255,0.95), rgba(15,23,42,1));
