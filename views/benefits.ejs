        justify-content: center;
        align-items: center;
        margin-bottom: 18px;
        box-shadow: 0 0 22px rgba(56,189,248,0.7);
    }

    .benefit-icon i {
        font-size: 26px;
        color: #020617;
    }

    .benefit-title {
        font-size: 19px;
        font-weight: 700;
        margin-bottom: 8px;
    }

    .benefit-desc {
        color: var(--muted);
        font-size: 15px;
        line-height: 1.6;
        margin: 0;
    }

    /* ========= RESPONSIVE ========= */
    @media (max-width: 1200px) {
        .benefits-section {
            padding: 100px 0;
        }

        .benefits-title {
            font-size: 40px;
        }

        .benefits-grid {
            gap: 28px;
        }
    }

    @media (max-width: 900px) {
        .benefits-section {
            padding: 80px 0;
        }

        .benefits-title {
            font-size: 34px;
        }

        .benefits-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 22px;
            padding: 0 18px;
        }

        .benefit-card {
            padding: 30px 22px;
        }
    }

    @media (max-width: 600px) {
        .benefits-section {
            padding: 70px 0;
        }

        .benefits-title {
            font-size: 30px;
        }

        .benefits-sub {
            font-size: 15px;
        }

        .benefits-grid {
            grid-template-columns: 1fr;
            gap: 18px;
            padding: 0 14px;
            margin-top: 36px;
        }

        .benefit-card {
            padding: 26px 18px;
            border-radius: 16px;
        }

        .benefit-icon {
            width: 56px;
            height: 56px;
            margin-bottom: 14px;
