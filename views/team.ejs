        height: 280px;
        object-fit: cover;
        display: block;
        transition: transform .6s ease;
    }

    .expert-card:hover .expert-img {
        transform: scale(1.05);
    }

    .expert-img-wrap::after {
        content: "";
        position: absolute;
        inset: auto 0 0 0;
        height: 40%;
        background: linear-gradient(to top, rgba(0,0,0,.85), transparent);
        pointer-events: none;
        opacity: .9;
    }

    .expert-tag-top {
