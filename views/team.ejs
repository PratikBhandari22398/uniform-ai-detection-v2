        background: rgba(0, 0, 0, 0.65);
        border: 1px solid rgba(75,201,255,.7);
        color: var(--accent);
    }

    .expert-social {
        position: absolute;
        right: 14px;
        top: 14px;
        display: flex;
        flex-direction: column;
        gap: 8px;
        transform: translateX(18px);
        opacity: 0;
        pointer-events: none;
        transition: transform .25s ease, opacity .25s ease;
        z-index: 2;
    }

    .expert-card:hover .expert-social {
        transform: translateX(0);
        opacity: 1;
        pointer-events: auto;
    }

    .social-dot {
        width: 34px;
        height: 34px;
        border-radius: 999px;
        background: rgba(15,23,42,.75);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid rgba(148,163,184,.4);
        font-size: 14px;
        cursor: pointer;
        transition: .18s ease;
        color: #fff;
        text-decoration: none;
    }

    .social-dot:hover {
        transform: translateY(-3px);
        background: var(--accent);
        color: #020617;
        border-color: transparent;
        box-shadow: 0 12px 30px rgba(198,255,62,.35);
    }

    .expert-icon-box {
        width: 86px;
        height: 72px;
        border-radius: 18px;
        background: rgba(15,23,42,.9);
        display: flex;
        align-items: center;
        justify-content: center;
