<style>
  .navbar-custom {
    position: sticky;
    top: 0;
    z-index: 100;
    height: var(--nav-height);
    display: flex;
    align-items: center;
    padding: 0 40px;
    width: 100%;
    background: rgba(2, 6, 23, 0.7);
    backdrop-filter: blur(18px);
    border-bottom: 1px solid rgba(148, 163, 184, 0.25);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.6);
    box-sizing: border-box;
  }

  .logo-area {
    display: flex;
    align-items: center;
    gap: 14px;
  }

  .logo-area img {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    box-shadow: 0 0 20px rgba(75, 201, 255, .5);
  }

  .logo-area a {
    text-decoration: none;
  }

  .logo-text {
    font-size: 1.6rem;
    font-weight: 800;
    color: #e5e7eb;
    font-family: "Space Grotesk", system-ui, sans-serif;
    letter-spacing: .04em;
  }

  .pro-text {
    color: var(--accent);
    font-weight: 900;
  }

  .right-buttons {
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }

  .right-buttons a,
  .right-buttons button {
    margin-left: 20px;
    font-size: .95rem;
    font-weight: 600;
    text-decoration: none;
    padding: 9px 22px;
    border-radius: 999px;
    transition: .25s ease;
    border: none;
    cursor: pointer;
    white-space: nowrap;
  }

  .btn-login {
    color: var(--accent-2);
    border: 1px solid rgba(75, 201, 255, .6);
    background: transparent;
    box-shadow: inset 0 0 0 rgba(75, 201, 255, 0);
  }

  .btn-login:hover {
    background: rgba(75, 201, 255, 0.15);
    box-shadow: inset 0 0 18px rgba(75, 201, 255, .4);
    transform: translateY(-1px);
  }

  .btn-signup {
    background: linear-gradient(135deg, var(--accent), var(--accent-soft));
    color: #020617;
    font-weight: 800;
    box-shadow: 0 0 25px rgba(198, 255, 62, .5);
  }

  .btn-signup:hover {
    transform: translateY(-2px) scale(1.04);
    box-shadow: 0 0 45px rgba(198, 255, 62, .75);
  }

  /* Hamburger icon (mobile only) */
  .menu-toggle {
    display: none;
    cursor: pointer;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 4px;
    margin-left: auto;
  }

  .menu-toggle span {
    width: 24px;
    height: 2px;
    background: var(--accent);
    border-radius: 999px;
    transition: 0.2s ease;
  }

  /* when menu open add class .open to .menu-toggle */
  .menu-toggle.open span:nth-child(1) {
    transform: translateY(6px) rotate(45deg);
  }

  .menu-toggle.open span:nth-child(2) {
    opacity: 0;
  }

  .menu-toggle.open span:nth-child(3) {
    transform: translateY(-6px) rotate(-45deg);
  }

  /* ------------ RESPONSIVE ------------ */
  @media (max-width: 900px) {
    .navbar-custom {
      padding: 0 16px;
      height: auto;
      min-height: 70px;
    }

    .logo-area img {
      width: 54px;
      height: 54px;
    }

    .logo-text {
      font-size: 1.4rem;
    }

    .right-buttons {
      position: absolute;
      top: var(--nav-height);
      right: 0;
      left: 0;
      background: rgba(2, 6, 23, .96);
      border-top: 1px solid rgba(148, 163, 184, .25);
      padding: 12px 16px 14px;
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
      display: none;
      z-index: 15;
      backdrop-filter: blur(14px);
      box-shadow: 0 20px 50px rgba(0, 0, 0, .75);
    }

    .right-buttons.show {
      display: flex;
    }

    .right-buttons a,
    .right-buttons button {
      margin-left: 0;
      width: 100%;
      text-align: left;
      padding: 10px 14px;
    }

    .menu-toggle {
      display: flex;
    }
  }

  @media (max-width: 480px) {
    .logo-text {
      font-size: 1.25rem;
    }

    .logo-area img {
      width: 48px;
      height: 48px;
    }
  }
</style>

<nav class="navbar-custom">
  <div class="logo-area">
    <a href="/"><img src="/logo.png" alt="Logo"></a>
    <a href="/">
      <span class="logo-text">
        UniformCheck <span class="pro-text">Pro</span>
      </span>
    </a>
  </div>

  <!-- spacer -->
  <div style="flex:1;"></div>

  <!-- Hamburger for mobile -->
  <div class="menu-toggle" id="menuToggle" aria-label="Toggle navigation" aria-expanded="false">
    <span></span>
    <span></span>
    <span></span>
  </div>

  <!-- Right links -->
  <div class="right-buttons" id="rightButtons">
    <!-- Smooth-scroll section links -->
    <a href="/" class="btn-login">Home</a>
     <a href="#about" class="btn-login">About</a>
    <a href="#workflow" class="btn-login">Workflow</a>
    <a href="#benefits" class="btn-login">Benefits</a>
    <!-- <a href="#team" class="btn-login">Team</a> -->

    <% if (!currentUser) { %>
      <a href="/login" class="btn-login">Login</a>
      <a href="/signup" class="btn-signup">Signup</a>
    <% } else { %>
      <a href="/detect" class="btn-login">Detect</a>
      <form action="/logout" method="post" style="display:inline;">
        <button class="btn-signup">
          Logout <%= currentUser.username %>
        </button>
      </form>
    <% } %>
  </div>
</nav>

<script>
  // Simple mobile menu toggle
  const menuToggle = document.getElementById('menuToggle');
  const rightButtons = document.getElementById('rightButtons');

  if (menuToggle) {
    menuToggle.addEventListener('click', () => {
      const isOpen = rightButtons.classList.toggle('show');
      menuToggle.classList.toggle('open', isOpen);
      menuToggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
    });
  }
</script>
